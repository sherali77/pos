<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <%- include('../layout') %>
<h2>Products</h2>
<a href="/products/new">Add Product</a>
<form action="/sales/checkout" method="POST">
<table>
  <tr><th>Name</th><th>Price</th><th>Stock</th><th>Qty</th><th>Actions</th></tr>
  <% products.forEach(p => { %>
    <tr>
      <td><%= p.name %></td>
      <td>$<%= p.price %></td>
      <td><%= p.stock %></td>
      <td><input name="items[<%= p._id %>]" type="number" min="0" max="<%= p.stock %>"></td>
      <td>
        <a href="/products/<%= p._id %>/edit">Edit</a>
        <form action="/products/<%= p._id %>?_method=DELETE" method="POST" style="display:inline;">
          <button type="submit">Delete</button>
        </form>
      </td>
    </tr>
  <% }) %>
</table>
<button type="submit">Checkout</button>
</form>
</body>
</html>
